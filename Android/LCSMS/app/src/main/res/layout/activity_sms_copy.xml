<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lcsms.SMSActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/contactview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/tab_middle_line_color"
                android:textSize="16dp"
                android:padding="0dp" />
            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:inputType="text"
                android:hint="请输入电话号码"
                android:singleLine="false"
                android:phoneNumber="true" />
            <Button
                android:id="@+id/readContacts"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@color/colorAccent1"
                android:onClick="onClick"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="联系人"/>

        </LinearLayout>


        <Button
            android:id="@+id/getMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="获取短信内容"/>

        <EditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="234dp"
            android:inputType="textMultiLine"
            android:background="@drawable/cborder"
            android:gravity="top"
            android:hint="短信自动发送，勿回"
            android:layout_weight="0.94" />

        <Button
            android:id="@+id/sendMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_deep"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="发  送"
            />
    </LinearLayout>
</RelativeLayout>
